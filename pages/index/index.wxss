/**index.wxss**/
.top-scroller-view {
  white-space: nowrap;
  /*border-bottom:1rpx solid rgb(139, 139, 143);*/
  background-color: #DA4F49;
}

.title-item {
  display: inline-block;
  padding: 20rpx 0rpx;
  color: rgb(219, 219, 223);
  font-size: 30rpx;
  width: 33.3%;
  text-align: center;
}

/*选中的选项卡*/
.title-item.selected {
  color:#fff;
  border-bottom:2px solid #fff;
}

/*用户头像*/  
.cell-profile-image{
  height:80rpx;
  width:80rpx;
  border-radius:40rpx
}

/*每一个段子cell*/ 
.tab-duanzi-cell{
  border-bottom: 1px solid #eee;
  padding:20rpx;
}
/*每一个图片cell*/ 
.tab-tupian-cell {
  border-bottom: 1px solid #eee;
  padding:20rpx;
}
.tab-tupian-cell .content-image{
  width: 100%;
}

/*每一个视频cell*/ 
.tab-shipin-cell {
  border-bottom: 1px solid #eee;
  padding:20rpx;
}
.tab-shipin-cell video, .tab-shipin-cell .cover-image{
  width: 100%;
  height: 225px; /*因为图片之后会变成视频组件, 高度需要一直， 不然高度会变化*/
}
/*视频播放按钮*/
.tab-shipin-cell .play-icon-image{
  position: absolute;
  top: 40%;
  left: 50%;
  height: 80rpx;
  width: 80rpx;
  margin-left: -40rpx;
}
/*视频基本信息*/
.tab-shipin-cell .video-basic-info{
  position: absolute;
  padding: 10rpx;
  left: 0;
  right: 0;
  background: linear-gradient(#fff, rgb(202, 199, 199));
  color: #fff;
  bottom: 0;
  font-size: 28rpx;
}

/*每一个声音cell*/ 
.tab-shengyin-cell {
  border-bottom: 1px solid #eee;
  padding:20rpx;
}
.tab-shengyin-cell video, .tab-shengyin-cell .cover-image{
  width: 100%;
  height: 225px; /*因为图片之后会变成视频组件, 高度需要一直， 不然高度会变化*/
}

.tab-shengyin-cell .play-icon-image{
  position: absolute;
  top: 40%;
  left: 50%;
  height: 80rpx;
  width: 80rpx;
  margin-left: -40rpx;
}

/*用户名字*/  
.cell-user-name {
  font-size:25rpx;
  color:rgb(18, 155, 160);
  margin-bottom: 15rpx;
}

/*用户发布时间*/  
.cell-create-at {
  font-size:25rpx;
  color:rgb(155, 173, 173);
}

/*点击查看全图   样式*/
.text-hover-image{
  position: absolute;
  bottom: 4px; /*我也不知道为什么图片的高度和父view的高度不一致，不然就设置0了*/
  text-align: center;
  left: 0;
  right: 0;
  padding: 8rpx;
  background-color: #444343;
  opacity: 0.6;
  color: #fff;
}

/* 点赞/转发所在的div*/
.cell-jiaohu {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

/* 图标和文字位置要对齐*/
.cell-icon {
  width:40rpx;
  height:40rpx;
  font-size: 40rpx;
  display: inline-block;
  vertical-align:middle;
}

.cell-jiaohu text {
  display: inline-block;
  vertical-align:middle;
  padding:15rpx;
  font-size:30rpx;
  color: #8a8a8a;
}

/*view 变成 inline-block*/
.inline-block-view {
  display:inline-block;
  vertical-align: top;
  margin-left: 25rpx;
}

/*加载更多数据*/
.load-more-data-view{
  text-align: center;
  padding: 10rpx;
  background-color: #fff;
  color: #000;
  font-size: 30rpx;
}

.load-more-data-view image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
}